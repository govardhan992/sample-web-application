#!/usr/bin/env groovy

@Library('jenkins-share-library') _ //master or whatever branch

pipeline{
	
      //agent any

      agent {
                docker {
                image 'maven'
                }
            }
        
        stages{

              stage('maven build'){
                  steps{
			/*config('repo_config.yml') { 
			     sh "${mavenBuild()}"  
   			} */
               	     
			 config {
				  sh "${mavenBuild()}"
			  }
			}
                 }	
                 
                 stage ('Check logs') {
                    steps {
                        filterLogs ('WARNING', 1)
                    }
                }
		
           }	       	     	         
}
